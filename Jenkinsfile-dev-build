pipeline {
  agent any

  tools {
    maven 'maven'
  }

  stages {
    stage('Build') {
      steps {
        sh 'mvn clean package'
      }
    }

    stage('Test') {
      steps {
        echo 'No test as of now.'
      }
    }

    stage('Deploy') {
      steps {
        def pom = readMavenPom file: 'pom.xml'
        nexusArtifactUploader artifacts: [[artifactId: 'py-gitops-app', classifier: '', file: 'target/py-gitops-app-${pom.version}.zip', type: 'zip']], credentialsId: 'nexus', groupId: 'com.sanmuk', nexusUrl: '192.168.56.102:8081', nexusVersion: 'nexus3', protocol: 'http', repository: 'snapshot', version: '${pom.version}'
      }
    }
  }
}
