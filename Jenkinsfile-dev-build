pipeline {
  agent any

  tools {
    maven 'maven'
  }

  environment {
    VERSION = readMavenPom().getVersion()
  }

  stages {
    stage('Build') {
      steps {
        sh 'mvn clean package'
      }
    }

    stage('Test') {
      steps {
        echo 'No test as of now.'
      }
    }

    stage('Deploy') {
      steps {
        nexusArtifactUploader artifacts: [[artifactId: 'py-gitops-app', classifier: '', file: "target/py-gitops-app-${VERSION}.zip", type: 'zip']], credentialsId: 'nexus', groupId: 'com.sanmuk', nexusUrl: '192.168.56.102:8081', nexusVersion: 'nexus3', protocol: 'http', repository: 'snapshot', version: "${VERSION}"
      }
    }

    stage('Image') {
      steps {
        script {
          dockerImage = docker.build 'sanmuk21/py-gitops-app' + ":$VERSION"
        }
      }
    }

    stage('Push'){
      steps {
        script {
          docker.withRegistry( 'https://registry-1.docker.io', 'dockerhub' ) {
            dockerImage.push()
          }
        }
      }
    }
  }
}
