pipeline {
  agent any

  tools {
    maven 'maven'
  }

  stages {

    stage('Build') {
      steps {
        sh 'mvn clean package'
      }
    }

    stage('Test') {
      steps {
        echo 'No test as of now.'
      }
    }

    stage('Deploy') {
      steps {
        nexusArtifactUploader artifacts: [[artifactId: 'py-gitops-app', classifier: '', file: 'target/py-gitops-app-0.1-SNAPSHOT.zip', type: 'zip']], credentialsId: 'nexus', groupId: 'com.sanmuk', nexusUrl: 'http://192.168.56.102:8081/', nexusVersion: 'nexus3', protocol: 'http', repository: 'snapshot', version: '0.1-SNAPSHOT'
      }
    }
  }
}
