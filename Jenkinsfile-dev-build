pipeline {
  agent any

  tools {
    maven 'maven'
  }

  environment {
    VERSION = readMavenPom().getVersion()
  }

  stages {
    stage('Build') {
      steps {
        sh 'mvn clean package'
      }
    }

    stage('Test') {
      steps {
        echo 'No test as of now.'
      }
    }

    stage('Image') {
      steps {
        script {
          dockerImage = docker.build 'sanmuk21/py-gitops-app' + ":$VERSION"
        }
      }
    }

    stage('Push'){
      steps {
        script {
          docker.withRegistry( 'https://registry-1.docker.io', 'dockerhub' ) {
            dockerImage.push()
          }
        }
      }
    }
  }
}
